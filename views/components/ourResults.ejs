 <div class="max-w-8xl mx-auto px-4 py-16">
        <div class="text-center mb-12">            
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Amazing Results</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">Discover how our solutions have transformed businesses and delivered exceptional outcomes for our clients worldwide.</p>
        </div>        
        <div class="relative overflow-hidden">
            <div class="scroll-container flex animate-scroll hover:pause space-x-8 py-8">                

                <% cars.forEach(car => { %>

    <div class="block w-80 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden border border-gray-100">        
        <div class="aspect-w-16 aspect-h-9 overflow-hidden">
            <img src="<%= car.photo %>" 
                 class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                 alt="BMW X5">        
                </div>
        <div class="p-6">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-xl font-bold text-gray-900"><%= car.name %></h3>
                <div class="flex items-center">
                    <i class="fab fa-bmw text-custom text-xl"></i>
                </div>            
            </div>
            <div class="flex items-center text-gray-600 text-sm mb-4">
                <i class="fas fa-calendar-alt mr-2"></i>
                <span><%= car.brand %></span>
                <span class="mx-2">•</span>
                <br> 
                <span> Model: &nbsp; <%= car.year %></span>
            </div>
            <div class="flex items-center justify-between">
                <div class="flex items-baseline">                    <span class="text-2xl font-bold text-custom">₹ <%= car.pricePerDay %></span>
                    <span class="text-gray-600 text-sm ml-1">/day</span>
                </div>
                <button class="!rounded-button bg-custom text-white px-4 py-2 text-sm font-medium hover:bg-opacity-90 transition-colors">                    Book Now
                </button>
            </div>
        </div>
    </div>
                <% }) %>

                

            </div>
        </div>
    </div>

    

   