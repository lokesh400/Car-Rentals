<div class="max-w-8xl mx-auto px-4 py-16">
    <div class="text-center mb-12">            
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Amazing Cars</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">Discover how our solutions have transformed businesses and delivered exceptional outcomes for our clients worldwide.</p>
    </div>        
    <div class="relative overflow-hidden">
        <div class="scroll-container flex animate-scroll hover:pause space-x-8 py-8">                
            <div id="carList" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">        
                <% cars.forEach(car => { %>
                    <div class="car-card bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300" data-name="<%= car.name.toLowerCase() %>">
                        <div class="aspect-w-16 aspect-h-10">                    
                            <img src="<%= car.photo %>" class="object-cover rounded-t-lg" alt="<%= car.name %>">               
                        </div>
                        <div class="p-4">
                            <h3 class="text-lg font-semibold text-gray-900"><%= car.name %></h3>                    
                            <p class="text-sm text-gray-500 mb-2"><%= car.brand %></p>
                            <p class="text-xl font-bold text-custom mb-4">Rs. <%= car.pricePerDay %>/day</p>
                            <div class="flex justify-between">
                                <a href="/admin/edit-car/<%= car._id %>">
                                    <button class="bg-gray-100 text-gray-700 !rounded-button px-4 py-2 text-sm font-medium hover:bg-gray-200">                            
                                        <i class="fas fa-edit mr-2"></i>Edit
                                    </button>
                                </a>
                                <form action="/admin/delete-car/<%= car._id %>_method=DELETE" method="POST" style="display:inline;">
                                    <button class="bg-red-50 text-red-600 !rounded-button px-4 py-2 text-sm font-medium hover:bg-red-100">                            
                                        <i class="fas fa-trash-alt mr-2"></i>Delete
                                    </button>
                                  </form>
                            </div>                
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>



