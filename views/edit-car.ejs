<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Car</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
  <style>
    /* Global Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f4f7fc;
      color: #333;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      min-height: 100vh;
      padding: 20px;
    }

    h1, h2 {
      color: #333;
      text-align: center;
    }

    /* Main Container */
    .form-container {
      background-color: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 900px;
      margin-top: 30px;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 20px;
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 20px;
      color: #555;
    }

    /* Form Styles */
    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-weight: bold;
      display: block;
      margin-bottom: 8px;
    }

    .form-group input, .form-group select, .form-group textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ddd;
      font-size: 1rem;
    }

    .form-group input[type="file"] {
      padding: 8px;
      font-size: 1rem;
    }

    .form-group textarea {
      height: 100px;
    }

    /* Button Styling */
    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      font-size: 1rem;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }

    button:hover {
      background-color: #0056b3;
      transform: translateY(-3px);
    }

    /* Image Preview */
    .image-preview {
      display: block;
      max-width: 100%;
      height: auto;
      margin-top: 10px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      h1 {
        font-size: 2rem;
      }

      h2 {
        font-size: 1.2rem;
      }

      .form-group input, .form-group select, .form-group textarea {
        font-size: 0.9rem;
      }

      button {
        font-size: 0.9rem;
        padding: 8px 15px;
      }
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 1.8rem;
      }

      h2 {
        font-size: 1rem;
      }

      .form-group input, .form-group select, .form-group textarea {
        font-size: 0.85rem;
      }

      button {
        font-size: 0.85rem;
        padding: 6px 12px;
      }
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h1>Edit Car</h1>
    <form action="/admin/update-car/<%= car._id %>" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Car Name:</label>
        <input type="text" name="name" id="name" value="<%= car.name %>" required>
      </div>

      <div class="form-group">
        <label for="brand">Car Brand:</label>
        <input type="text" name="brand" id="brand" value="<%= car.brand %>" required>
      </div>

      <div class="form-group">
        <label for="year">Year:</label>
        <input type="number" name="year" id="year" value="<%= car.year %>" required>
      </div>

      <div class="form-group">
        <label for="pricePerDay">Price Per Day:</label>
        <input type="number" name="pricePerDay" id="pricePerDay" value="<%= car.pricePerDay %>" required>
      </div>

      <div class="form-group">
        <label for="file">Car Image:</label>
        <input type="file" name="file" id="file">
        <img src="<%= car.imageUrl %>" alt="Car Image" class="image-preview" id="imagePreview">
      </div>

      <button type="submit">Update Car</button>
    </form>
  </div>

  <script>
    // Image preview functionality
    const fileInput = document.getElementById('file');
    const imagePreview = document.getElementById('imagePreview');

    fileInput.addEventListener('change', function () {
      const file = this.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          imagePreview.src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>
</html>
